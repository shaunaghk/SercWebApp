@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Courses>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
}


<html>
    <body >	
        <div id="main">
            <div class="container">
                <header>
                    <h2>Courses</h2>
                </header>
	        
@{
	var selection = Umbraco.Content(Guid.Parse("4021c703-505f-4a22-ac02-924cd11265a1"))
    .ChildrenOfType("courseInformation")
    .Where(x => x.IsVisible());
}
<ul>
	@foreach (var item in selection)
	{
		<li>
			<a href="@item.Url" class="button" >@item.Name</a>
		</li>
	}
</ul>


		        </div>
            </div>
        </div>
    </body>
</html>

